maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
pkgver=0.4.0
pkgrel=1
pkgdesc='Plugin for Hatch that uses your preferred version control system (like Git) to determine project versions.'
arch=('any')
license=('MIT')
url="https://github.com/ofek/hatch-vcs"
depends=(
  'python-six')
makedepends=(
  'python-build'
  'python-installer'
  'python-setuptools'
  'python-wheel'
)
_commit=
source=("git+https://github.com/ofek/hatch-vcs.git#tag=v${pkgver}")
sha512sums=(
  'SKIP'
)

build() {
    cd "${srcdir}/hatch-vcs"

    python -m build --wheel --no-isolation
}

package() {
    cd "${srcdir}/hatch-vcs"

    python -m installer --destdir="${pkgdir}" dist/*.whl

    install -D -m0644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}
}
